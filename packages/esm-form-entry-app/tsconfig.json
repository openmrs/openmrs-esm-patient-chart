{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2020",
    "types": [
      "node",
      "webpack-env",
      "jasmine"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2020"
    ],
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}
