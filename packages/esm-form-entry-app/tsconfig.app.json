{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "fhir",
      "node",
      "webpack-env",
    ],
    "target": "es2020",
    "paths": {
      "@openmrs/esm-framework": [
        "../../node_modules/@openmrs/esm-framework/src/internal"
      ],
    }
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/**/*.mock.ts"
  ]
}
